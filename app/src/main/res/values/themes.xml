<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Naivas" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/naivas_color</item>
        <item name="colorSecondaryVariant">@color/naivas_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->


    </style>

    <style name="UserRegistration" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/c3</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <!--EditText hint color-->
        <item name="android:textColorHint">@color/Silver</item>
        <!-- TextInputLayout text color-->
        <item name="colorControlActivated">@color/naivas_color</item>
        <!-- EditText line color when EditText on-focus-->
        <item name="colorControlHighlight">@color/naivas_color</item>
        <!-- EditText line color when EditText  in un-focus-->
        <item name="colorControlNormal">@color/c3</item>
        <item name="android:colorForeground">@color/Silver</item>
        <item name="android:textColorSecondary">@color/Silver</item>

    </style>
</resources>